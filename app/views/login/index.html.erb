<div class="d-flex align-items-center vh-100">
    <div class="offset-lg-4 col-lg-4 offset-md-3 col-md-6 col-sm-12">
        <div class="card">
            <div class="card-header">
                <h2 class="card-title text-center">Login</h2>
            </div>
            <div class="card-body">
                <%= form_with scope: :user, url: '/users/login', local: true do |form| %>

                    <div class="form-group">
                        <%= form.label :email %>
                        <%= form.text_field :email , :class => "form-control" %>
                    </div>

                    <div class="form-group">
                        <%= form.label :password %>
                        <%= form.text_field :password , :class => "form-control" %>
                    </div>

                    <div class="text-center">
                        <%= form.submit "Login" , :class => "btn btn-primary" %>
                    </div>

                <% end %>
            </div>
            <div class="card-footer text-center">
                <h4>New User?</h4>
                <%= link_to "Sign Up", user_register_url, :class => "btn btn-success" %>
            </div>
        </div>
    </div>
</div>